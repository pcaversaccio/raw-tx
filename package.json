{
  "name": "raw-tx",
  "version": "1.0.0",
  "description": "Four scripts to ordinary generate, EIP-4844-type generate, EIP-7702-type generate, and execute a signed raw transaction with ethers.",
  "main": "sign.ts",
  "keywords": [
    "raw-transaction",
    "ethers"
  ],
  "author": "pcaversaccio",
  "license": "WTFPL",
  "packageManager": "pnpm@10.30.2",
  "scripts": {
    "generate": "ts-node ./scripts/sign.ts",
    "generate:eip4844": "ts-node ./scripts/sign-eip4844.ts",
    "generate:eip7702": "ts-node ./scripts/sign-eip7702.ts",
    "execute": "ts-node ./scripts/execute.ts",
    "prettier:check": "prettier -c \"**/*.{ts,md,json,yml,yaml}\"",
    "prettier:fix": "prettier -w \"**/*.{ts,md,json,yml,yaml}\"",
    "lint:check": "pnpm prettier:check && eslint .",
    "lint:fix": "pnpm prettier:fix && eslint . --fix"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.0",
    "dotenv": "^17.3.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "ethers": "^6.16.0",
    "globals": "^17.3.0",
    "kzg-wasm": "^1.0.0",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}
